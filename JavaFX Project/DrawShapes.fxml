<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DrawShapesController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="300.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" onAction="#drawRectanglesButtonPressed" text="Draw Rectangles" />
            <Button mnemonicParsing="false" onAction="#drawOvalsButtonPressed" text="Draw Ovals" />
            <Button mnemonicParsing="false" onAction="#drawCirclesButtonPressed" text="Draw Circles" />
            <Button mnemonicParsing="false" onAction="#drawCirclesAndSquaresButtonPressed" text="Draw Circles and Squares" />
        </items>
      </ToolBar>
   </top>
   <center>
      <Canvas fx:id="canvas" height="300.0" width="300.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
